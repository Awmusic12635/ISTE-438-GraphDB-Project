<script
        src="http://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
<script>
    $(document).ready(function(){
        $('#moviesTable').DataTable();
    });
</script>

<h3>Add Movie</h3>
<form method="post" action="/movie/add">
  <label>Movie Title</label><br>
  <input type="text" name="title">
  <br>
  <label>Year</label><br>
  <input type="text" name="year">
  <br><br>
  <input type="submit" value="submit">
</form>

<h3>Add Person</h3>
<form method="post" action="/person/add">
  <label>Person Name</label><br>
  <input type="text" name="name">
  <br><br>
  <input type="submit" value="submit">
</form>

<h3>Add Actor to Movie</h3>
<form method="post" action="/movie/actor/add">
  <label>Movie Title</label><br>
  <input type="text" name="title">
  <br>
  <label>Actor Name</label><br>
  <input type="text" name="name">
  <br><br>
  <input type="submit" value="submit">
</form>

<h3>Movies</h3>
<table id="moviesTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Studio</th>
            <th>Run Time</th>
            <th>Description</th>
            <th>Language</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
    <% movies.forEach(function(movie) { %>
        <tr style="pointer:cursor;" onclick="window.location='/movie/<%= movie.id %>'">
            <td><%= movie.id %></td>
            <td><%= movie.title %></td>
            <td><%= movie.studio %></td>
            <td><%= movie.runtime %></td>
            <td><%= movie.description %></td>
            <td><%= movie.language %></td>
            <td><%= movie.genre %></td>
        </tr>
    <% }) %>
    </tbody>
</table>


<h3>Persons</h3>
<ul>
<% persons.forEach(function(person) { %>
   <li><%= person.name %></li>
<% }) %>
</ul>
